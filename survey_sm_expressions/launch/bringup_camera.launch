<launch>
    <include file="$(find openni2_launch)/launch/openni2.launch">
        <arg name="depth_registration" value="true"/>
    </include>

    <arg name="diff_x" default="0.0" />
    <arg name="diff_y" default="0.0" />
    <arg name="diff_z" default="0.0" />
    <arg name="diff_tilt" default="0.0" />

    <node pkg="tf" type="static_transform_publisher" name="camera_base_footprint" args="$(arg diff_x) $(arg diff_y) 0 0 0 0 world camera_base_footprint 50"/>
    <node pkg="tf" type="static_transform_publisher" name="camera_base_footprint_link" args="0 0 $(arg diff_z) 0 $(arg diff_tilt) 0 camera_base_footprint camera_link 50"/>
</launch>
